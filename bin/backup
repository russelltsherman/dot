#!/usr/bin/env bash
# shellcheck disable=SC1091

if [[ $EUID -ne 0 ]]; then
  echo "This script must be run with root privileges (use sudo)."
  exit 1
fi

DEST=${1}

if [[ ! -z "$DEST" ]]; then

  DESTPATH=/Volumes/$DEST
  if [ -e "$DESTPATH" ]; then
    rsync -avh \
      --include '.config' \
      --exclude '.*' \
      --exclude 'Applications' \
      --exclude 'Library' \
      /Users/russellsherman $DESTPATH
  else
      echo "$DESTPATH does not exist."
  fi
fi
